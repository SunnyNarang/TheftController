<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        fresco:fadeDuration="600"
        android:layout_marginLeft="10dp"
        fresco:roundingBorderWidth="1dp"
        android:layout_gravity="center_vertical"
        fresco:roundingBorderColor="#3DBDFF"
        android:layout_height="80dp"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/item"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic_name1"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name2"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name3"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topic_name4"
                android:text="Hello Card"
                android:layout_width="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#A1000000"
                android:layout_height="wrap_content" />



        </LinearLayout>




</LinearLayout>